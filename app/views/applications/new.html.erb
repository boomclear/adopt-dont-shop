<h1> New Application </h1>

<%= form_with url: "/applications/:id", method: :post, local: true do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name, required: true %><br>
  <%= form.label :street_address, "Street Address" %>
  <%= form.text_field :street_address, required: true %><br>
  <%= form.label :city %>
  <%= form.text_field :city, required: true %><br>
  <%= form.label :state %>
  <%= form.text_field :state, required: true %><br>
  <%= form.label :zip_code, "Zip Code" %>
  <%= form.text_field :zip_code, required: true %><br>
  <%= form.label :description %>
  <%= form.text_area :description, required: true %><br>

  <%= form.submit "Submit" %>
<% end %>